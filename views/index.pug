doctype
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name="viewport", content="width=device-width")
        title #{title}
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
        script(src="https://kit.fontawesome.com/a80078a209.js", crossorigin="anonymous") 
        link(rel="stylesheet", href="css/style.css")
    body
        header
            nav.navbar.navbar-expand-lg.navbar-light
                div.container-fluid
                    h1 Grocery Store
                    button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
                        span.navbar-toggler-icon
                    div.collapse.navbar-collapse#navbarSupportedContent
                        ul.navbar-nav.me-auto.mb-2.mb-lg-0
                            li.nav-item
                                a.nav-link(href="/") Categories
                            li.nav-item
                                a.nav-link(href="/") About
                            li.nav-item
                                a.nav-link(href="/") Contact
        main
            div#carouselExampleControls.carousel.slide(data-bs-ride="carousel")
                div.carousel-inner
                    div.carousel-item.active.banner-container
                        //- https://www.pexels.com/photo/assorted-vegetables-on-brown-wooden-table-1414651/?utm_content=attributionCopyText&utm_medium=referral&utm_source=pexels
                        img.d-block.w-100(src="images/veggies.jpg", alt="...")
                    div.carousel-item.banner-container
                        //- https://www.pexels.com/photo/assorted-color-beans-in-sack-1393382/?utm_content=attributionCopyText&utm_medium=referral&utm_source=pexels
                        img.d-block.w-100(src="images/grains.jpg", alt="...")
                    div.carousel-item.banner-container
                        //- https://www.pexels.com/photo/assorted-sliced-fruits-1128678/?utm_content=attributionCopyText&utm_medium=referral&utm_source=pexels
                        img.d-block.w-100(src="images/fruits.jpg", alt="...")
                button.carousel-control-prev(type="button", data-bs-target="#carouselExampleControls", data-bs-slide="prev")
                    span.carousel-control-prev-icon(aria-hidden="true")
                    span.visually-hidden Previous
                button.carousel-control-next(type="button", data-bs-target="#carouselExampleControls", data-bs-slide="next")
                    span.carousel-control-next-icon(aria-hidden="true")
                    span.visually-hidden Next
            section
                div.container
                    div.row
                        h2 Popular Categories
                        div.col.categories
                            a(href="/") Fruits
                        div.col.categories
                            a(href="/") Veggies
                        div.col.categories
                            a(href="/") Dairy
                        div.col.categories
                            a(href="/") Spices
                        div.col.categories
                            a(href="/") Rice & Noodles
                    div.row
                        h2 Popular Products
                        div.col.categories Fruits
                        div.col.categories Veggies
                        div.col.categories Dairy
                        div.col.categories Spices
                        div.col.categories Rice & Noodles
        footer
            p &copy; COPYRIGHT | GROCERY STORE 2022
